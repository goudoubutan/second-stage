<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.zx.mapper.ProductMapper">

    <resultMap type="com.csqf.zx.entity.ProductEntity" id="ProductMap">
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="pname" column="pname" jdbcType="VARCHAR"/>
        <result property="pprice" column="pprice" jdbcType="NUMERIC"/>
        <result property="pinfo" column="pinfo" jdbcType="VARCHAR"/>
        <result property="pstatus" column="pstatus" jdbcType="VARCHAR"/>
        <result property="psrc" column="psrc" jdbcType="VARCHAR"/>
        <result property="pstar" column="pstar" jdbcType="VARCHAR"/>
        <result property="oprice" column="oprice" jdbcType="NUMERIC"/>

    </resultMap>


    <!--查询所有-->
    <select id="allProducts" resultMap="ProductMap">
        select
          pid, mid, pname, pprice, pinfo, pstatus, psrc, pstar,oprice
        from product
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="pid" useGeneratedKeys="true">
        insert into product(mid, pname, pprice, pinfo, pstatus, psrc, pstar)
        values (#{mid}, #{pname}, #{pprice}, #{pinfo}, #{pstatus}, #{psrc}, #{pstar})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update product
        <set>
            <if test="mid != null">
                mid = #{mid},
            </if>
            <if test="pname != null and pname != ''">
                pname = #{pname},
            </if>
            <if test="pprice != null">
                pprice = #{pprice},
            </if>
            <if test="pinfo != null and pinfo != ''">
                pinfo = #{pinfo},
            </if>
            <if test="pstatus != null and pstatus != ''">
                pstatus = #{pstatus},
            </if>
            <if test="psrc != null and psrc != ''">
                psrc = #{psrc},
            </if>
            <if test="pstar != null and pstar != ''">
                pstar = #{pstar},
            </if>
        </set>
        where pid = #{pid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from product where pid = #{pid}
    </delete>

</mapper>

