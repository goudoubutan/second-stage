<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.zx.mapper.CartMapper">

    <resultMap type="com.csqf.zx.entity.CartEntity" id="CartMap">
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="pname" column="pname" jdbcType="VARCHAR"/>
        <result property="pprice" column="pprice" jdbcType="NUMERIC"/>
        <result property="psrc" column="psrc" jdbcType="VARCHAR"/>
        <result property="cnum" column="cnum" jdbcType="INTEGER"/>
        <result property="ctotal" column="ctotal" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="allCartProducts" resultMap="CartMap">
        select
          cid, pid, pname, pprice, psrc, cnum, ctotal
        from cart
    </select>

    <select id="selectCid" resultMap="CartMap">
        select
          cid
        from cart
    </select>



    <select id="findByCid" resultMap="CartMap">
        select
            cid, pid, pname, cnum, ctotal
        from cart
        where cid = #{cid}
    </select>

    <!--统计总行数-->
    <select id="selectCart" resultType="java.lang.Integer">
        select count(1)
        from cart
    </select>

    <!--新增所有列-->
    <insert id="addCart" >
        insert into cart(pid, pname, pprice, psrc, cnum, ctotal)
        values (#{cartEntity.pid}, #{cartEntity.pname}, #{cartEntity.ctotal}/#{cartEntity.cnum}, #{cartEntity.psrc}, #{cartEntity.cnum}, #{cartEntity.ctotal})
    </insert>

    <!--通过主键删除-->
    <delete id="deleteCart">
        delete from cart where cid = #{cid}
    </delete>

</mapper>

