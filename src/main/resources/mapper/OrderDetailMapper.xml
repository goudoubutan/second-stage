<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.zx.mapper.OrderDetailMapper">

    <resultMap type="com.csqf.zx.entity.OrderDetailEntity" id="OrderDetailMap">
        <result property="odid" column="odid" jdbcType="INTEGER"/>
        <result property="oid" column="oid" jdbcType="VARCHAR"/>
        <result property="odname" column="odname" jdbcType="VARCHAR"/>
        <result property="odmoney" column="odmoney" jdbcType="NUMERIC"/>
        <result property="odnum" column="odnum" jdbcType="INTEGER"/>
    </resultMap>

    <!--新增所有列-->
    <insert id="saveOrderDetail">
        insert into orderdetail(oid, odname, odmoney, odnum)
        values (#{orderDetailEntity.oid}, #{orderDetailEntity.odname}, #{orderDetailEntity.odmoney}, #{orderDetailEntity.odnum})
    </insert>


    <select id="getOrderDetail"   resultMap="OrderDetailMap">
        select odid, oid, odname, odmoney, odnum
        from orderdetail
        where oid = #{oid}
    </select>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from orderdetail where odid = #{odid}
    </delete>

</mapper>

