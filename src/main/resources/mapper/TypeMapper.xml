<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.zx.mapper.TypeMapper">

    <resultMap type="com.csqf.zx.entity.TypeEntity" id="TypeMap">
        <result property="tid" column="tid" jdbcType="INTEGER"/>
        <result property="tname" column="tname" jdbcType="VARCHAR"/>
        <result property="tsrc" column="tsrc" jdbcType="VARCHAR"/>
        <result property="tnum" column="tnum" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TypeMap">
        select
          tid, tname, tsrc, tnum
        from type
        where tid = #{tid}
    </select>

    <!--查询所有-->
    <select id="allTypes" resultMap="TypeMap">
        select
            tid, tname, tsrc, tnum
        from type
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="tid" useGeneratedKeys="true">
        insert into type(tname, tsrc, tnum)
        values (#{tname}, #{tsrc}, #{tnum})
    </insert>


    <!--通过主键删除-->
    <delete id="deleteById">
        delete from type where tid = #{tid}
    </delete>

</mapper>

